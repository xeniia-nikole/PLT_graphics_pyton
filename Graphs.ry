x = [-7, -5, 7, 9, 10, 10, 9, -7, 0, 5, 7, 4, 0, 6, 8, 4, 0]
y = [0, 2, 2, 5, 5, 1, 0, 0, 2, 6, 6, 2, 1, -3, -3, 1, 1]

plt.figure(1)
plt.plot(x, y)
plt.grid() 
plt.plot(x, y, color='r')
plt.title('plot(x,y)')
plt.xlabel('$x$')
plt.ylabel('$y$')

plt.figure(2)
plt.grid() 
plt.scatter(x, y, color='g')
plt.title('scatter(x,y)')
plt.xlabel('$x$')
plt.ylabel('$y$')

plt.figure(3)
plt.plot(x, y)
plt.grid() 
plt.figsize=(6, 3)
plt.title('Самолет') 
plt.xlabel('$x$')
plt.ylabel('$y$')

plt.show()
